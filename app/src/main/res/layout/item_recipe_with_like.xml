<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yemekIsmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="@string/food_name"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/yemekResmi"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/no" />

        <TextView
            android:id="@+id/yemekEkleyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            android:text="Ekleyen"/>

        <TextView
            android:id="@+id/yemekAciklamasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="24dp"
            android:text="@string/food_description"/>

        <TextView
            android:id="@+id/yemekEtiketleri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="24dp"
            android:text="@string/food_tags"/>

        <Button
            android:id="@+id/bBegen"
            android:layout_width="60dp"
            android:background="@drawable/ic_favorite"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/red"/>
    </LinearLayout>
</LinearLayout>